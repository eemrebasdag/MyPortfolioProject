@model List<MyPortfolio.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}



<br>
<br />
<h2>Referanslar Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>İsim Soyisim</th>
        <th>Unvan</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="width:50px; height:50px;"/></td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@(item.Status == true ? "Aktif" : "Pasif")</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-info">Güncelle</a></td>
            <td><a href="/Testimonial/MakeActive/@item.TestimonialId" class="btn btn-outline-success">Aktif Yap</a></td>
            <td><a href="/Testimonial/MakePassive/@item.TestimonialId" class="btn btn-outline-danger">Pasif Yap</a></td>
        </tr>
    }
</table>

<br />
<a href="/Testimonial/AddTestimonial" class="btn btn-outline-dark">Yeni Referans Ekle</a>