@model List<MyPortfolio.Models.TblExperience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}

<br>
<br />
<h2>Deneyimler Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>ID</th>
        <th>Şirket</th>
        <th>Lokasyon</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.ExperienceId</td>
            <td>@item.Company</td>
            <td>@item.Location</td>
            <td>@item.StartYear - @item.EndYear</td>
            <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }
</table>

<br />
<a href="/Experience/AddExperience" class="btn btn-outline-dark">Yeni Deneyim Ekle</a>