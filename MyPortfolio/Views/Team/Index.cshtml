@model List<MyPortfolio.Models.TblTeam>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<br>
<br />
<h2>Takım Arkadaşları Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>İsim Soyisim</th>
        <th>Unvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img  src="@item.ImageUrl" style="width:50px; height:50px;"/></td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }
</table>

<br />
<a href="/Team/AddTeam" class="btn btn-outline-dark">Yeni Takım Arkadaşı Ekle</a>