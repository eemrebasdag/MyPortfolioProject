@model MyPortfolio.Models.TblService
@{
    ViewBag.Title = "Update Services";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>Hizmet Güncelleme Sayfası</h3>

<form method="post">
    <input type="hidden" name="ServiceId" value="@Model.ServiceId" />
    <label>İkon</label>
    <input type="text" name="Icon" value="@Model.Icon" class="form-control" />
    <br />
    <label>İsim</label>
    <input type="text" name="Title" value="@Model.Title" class="form-control" />
    <br />
    <label>Durum</label>
    <select name="Status" class="form-control">
        @if (Model.Status == true)
        {
            <option value="1" selected>Aktif</option>
            <option value="2">Pasif</option>
        }
        else
        {
            <option value="1">Aktif</option>
            <option value="2" selected>Pasif</option>
        }
    </select>
    <br />
    <label>Açıklama</label>
    <textarea type="text" name="Description" class="form-control">@Model.Description</textarea>
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>
