@model List<MyPortfolio.Models.TblFeature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    int count = 0;
}

<br>
<br />
<h2>Öne Çıkanlar Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>ID</th>
        <th>Image</th>
        <th>Unvan</th>
        <th>İsim Soyisim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.FeatureId</td>
            <td><img src="@item.ImageUrl" style="width:80px; height:80px;"/></td>
            <td>@item.Title</td>
            <td>@item.NameSurname</td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }
</table>

<br />
<a href="/Feature/AddFeature" class="btn btn-outline-dark">Yeni Hakkımda Ekle</a>